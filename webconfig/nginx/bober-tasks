# HTTPS server
#

server {
	listen 80;
	server_name BOBER_TASKS_SERVER_NAME;

	root BOBER_HOME/bober/rvp/;
	include /etc/nginx/uwsgi_params;

	charset utf-8;

	tcp_nodelay on;
	server_tokens off;

	location / {
		uwsgi_pass unix:/tmp/bober-tasks-uwsgi.sock;
	}
}
